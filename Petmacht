  <!-- Script para redirigir al formulario -->
  <script>
    function pedir(producto, talla = '') {
      let url = 'formulario.html?producto=' + encodeURIComponent(producto);
      if (talla) {
        url += '&talla=' + encodeURIComponent(talla);
      }
      window.location.href = url;
    }
